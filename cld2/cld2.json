{
    "name": "cld2",
    "buildsystem": "simple",
    "build-options": {
        "cxxflags": "-std=c++98"
    },
    "build-commands": [
        "cp CMakeLists.txt ./cld2",
        "cmake -B _flatpak_build -S cld2 -G Ninja -DCMAKE_INSTALL_PREFIX=/app -DCMAKE_INSTALL_LIBDIR=lib -DCMAKE_BUILD_TYPE=Release -DCMAKE_POLICY_VERSION_MINIMUM=3.5",
        "ninja -C _flatpak_build && ninja -C _flatpak_build install"
    ],
    "sources":[
        {
            "type": "git",
            "url": "https://github.com/CLD2Owners/cld2.git",
            "commit": "84b58a5d7690ebf05a91406f371ce00c3daf31c0",
            "dest": "cld2"
        },
        {
            "type": "file",
            "path": "CMakeLists.txt"
        }
    ]
}
