{
    "name": "fftw3f",
    "config-opts": [
        "--enable-threads",
        "--enable-shared",
        "--disable-static",
        "--enable-float"
    ],
    "build-options": {
        "arch": {
            "x86_64": {
                "config-opts": [
                    "--enable-sse2",
                    "--enable-avx",
                    "--enable-avx-128-fma"
                ]
            },
            "aarch64": {
                "config-opts": [
                    "--enable-neon"
                ]
            }
        }
    },
    "sources": [
        {
            "type": "archive",
            "url": "http://www.fftw.org/fftw-3.3.9.tar.gz",
            "sha256": "bf2c7ce40b04ae811af714deb512510cc2c17b9ab9d6ddcf49fe4487eea7af3d"
        }
    ],
    "cleanup": [
        "/bin",
        "/include",
        "/lib/cmake",
        "/lib/pkgconfig",
        "/share/man",
        "*.la",
        "*.so"
    ]
}
