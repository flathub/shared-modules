{
    "name": "pyqt5",
    "config-opts": [
        "--assume-shared",
        "--concatenate",
        "--confirm-license",
        "--enable=QtCore",
        "--enable=QtDBus",
        "--enable=QtGui",
        "--enable=QtNetwork",
        "--enable=QtOpenGL",
        "--enable=QtPrintSupport",
        "--enable=QtQml",
        "--enable=QtQuick",
        "--enable=QtSql",
        "--enable=QtTest",
        "--enable=QtWebChannel",
        "--enable=QtWidgets",
        "--no-designer-plugin",
        "--no-dist-info",
        "--no-docstrings",
        "--no-qml-plugin",
        "--no-qsci-api",
        "--no-stubs",
        "--no-tools",
        "QMAKE_CFLAGS_RELEASE='-I/usr/include/python3.8/'",
        "QMAKE_CXXFLAGS_RELEASE='-I/usr/include/python3.8/'"
    ],
    "build-options": {
        "arch": {
            "aarch64": {
                "config-opts": [
                    "--disable-feature=PyQt_Desktop_OpenGL"
                ]
            }
        }
    },
    "sources": [
        {
            "type": "archive",
            "url": "https://pypi.python.org/packages/source/P/PyQt5/PyQt5-5.15.4.tar.gz",
            "sha256": "2a69597e0dd11caabe75fae133feca66387819fc9bc050f547e5551bce97e5be",
            "x-checker-data": {
                "type": "pypi",
                "name": "PyQt5"
            }
        },
        {
            "type": "script",
            "commands": [
                "processed=`sed -e 's|prefix|sysroot|' <<< $@`",
                "python3 configure.py $processed"
            ],
            "dest-filename": "configure"
        }
    ],
    "cleanup": [
        "/share/sip"
    ],
    "modules": [
        "../dbus-python/dbus-python.json",
        "../python-opengl/python-opengl.json",
        "sip.json"
    ]
}
